<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".NetworkInfoFragment"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="109dp"
        android:layout_height="58dp"
        android:src="@drawable/logopng"
        android:id="@+id/logo"
        android:layout_weight="0.05" />

    <TextView
        android:text="Wifi parameters:"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:id="@+id/wifi_info"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_toRightOf="@+id/logo"
        android:layout_weight="0.05"
        android:fontFamily="serif"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/list_wifi_info"
        android:layout_height="140dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="LTE parameters:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lte_info"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_below="@+id/list_wifi_info"
        android:layout_weight="0.05"
        android:fontFamily="serif" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/list_lte_info"
        android:layout_height="90dp"
        android:layout_below="@+id/lte_info"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Phone info:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_info"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_below="@+id/list_lte_info"
        android:layout_weight="0.05"

        android:fontFamily="serif" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/list_phone_info"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_info"
        android:layout_alignParentStart="true" />

</RelativeLayout>
